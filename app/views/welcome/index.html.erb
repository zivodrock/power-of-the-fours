<audio id="star-wars-sound-clip">
    <source src="assets/star-wars-theme.mp3"></source>
</audio>
<div class="stars"></div>
<div class="animated-stars"></div>

<div id="page-container">
    <div id="container-verthorz-middle">

        <div id="game-menu" class="hexagon modal-hexagon">
            <span class="game-logo"></span>
            <h3>GAME MODE</h3>
            <ul>
                <li><a class="human">2 PLAYERS</a></li>
                <li><a class="ai">VERSUS AI</a></li>
            </ul>
        </div><!--#game-menu-->

        <div id="level-menu" class="hexagon modal-hexagon">
            <span class="game-logo"></span>
            <h3>LEVEL</h3>
            <a class="jarjar" data-level="pfft"><span>PFFT!</span></a>
            <a class="yoda" data-level="jedi" data-title="&quot;Unavailable, this level is. First hire Carlo Cordoviz, you must. Yes, hmmm...&quot;"><span>JEDI</span></a>
            <a class="vader" data-level="tyrant" data-title="&quot;The Force is strong with this one. You will need Carlo Cordoviz to conquer this level.&quot;"><span>TYRANT</span></a>
            <a class="back-to-game-menu">[ BACK ]</a>
        </div><!--#level-menu-->

        <p id="goodluck">The fours, it's calling to you.<br />Just let it win.</p>
        <p id="goodbye">May the fours be with you.</p>

        <div id="intro">
            <span class="power-of-fours-title">POWER OF THE FOURS</span>
        </div><!--#intro-->

        <div id="board">
            <a id="main-menu-btn" title="Show Main Menu" data-toggle="modal" data-target="#main-menu"><span></span></a>
            <div id="main-menu" class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog hexagon modal-hexagon">
                    <span class="game-logo"></span>
                    <h3>MENU</h3>
                    <ul>
                        <li><a class="reset-game">RESET GAME</a></li>
                        <li><a class="quit-to-menu">QUIT</a></li>
                    </ul>
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
            <div id="result-container" data-result="" data-player="">
                <div class="win">
                    <span class="player-1"></span>
                    <span class="player-2"></span>
                    <span class="player-3"></span>
                    <p>WINNER</p>
                </div>
                <div class="draw">
                    <p>NO WINNER</p>
                </div>
            </div><!--#result-container-->
        </div><!--#board-->

        <div id="player-turn-container">
            <div class="player-1">
                <span><span class="sw-icon-finn"></span></span>
                PLAYER : FINN
            </div>
            <div class="player-2">
                <span><span class="sw-icon-kylo"></span></span>
                PLAYER : KYLO REN
            </div>
            <div class="player-3">
                <span><span class="sw-icon-jarjar"></span></span>
                <div class="ai-loader-container">
                    <div class="ai-loader"></div>
                </div>
                PLAYER : JAR JAR
            </div>
        </div><!--#player-turn-container-->
    </div>
</div>

<script type="text/javascript" >
    $(window).load(function(){
        $("#board").powerofthefours();
    });
</script>